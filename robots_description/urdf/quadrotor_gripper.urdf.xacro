<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="pi" value="3.1415926535897931" />

  <!-- Main quadrotor link -->
  <xacro:macro name="quadrotor_gripper_macro">
    <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

    <joint name="base_joint" type="fixed">
     <parent link="base_link"/>
     <child link="riser"/>
     <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <link name="riser">
     <visual>
      <geometry>
        <box size="0.01 0.01 0.4"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
      <material name="white"/>
     </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.4"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

    <joint name="joint1" type="fixed">
     <parent link="riser"/>
     <child link="palm"/>
     <origin rpy="0 0 0" xyz="0 0 -0.4"/>
    </joint>

  <link name="palm">
    <visual>
      <geometry>
        <box size="0.025 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.0125"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.025 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.0125"/>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="palm_left_finger" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort ="20" lower="-0.4" upper="0.4" velocity="2.1750"/>
    <origin rpy="0 0 ${-pi/3}" xyz="0 0 -0.025"/>
    <parent link="palm"/>
    <child link="left_finger"/>
  </joint>

  <link name="left_finger">
    <visual>
      <geometry>
        <box size="0.01 0.075 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.0375 0.0125"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.075 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.0375 0.0125"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_finger_tip" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort ="20" lower="-0.4" upper="0.4" velocity="2.1750"/>
    <origin rpy="0 0 ${-pi/6}" xyz="0 0.075 0"/>
    <parent link="left_finger"/>
    <child link="left_finger_tip"/>
  </joint>


  <joint name="left_finger_hinge_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="left_finger_tip"/>
    <child link="left_finger_hinge"/>
  </joint>

  <link name="left_finger_hinge">
   <visual>
    <geometry>
     <cylinder  radius="0.006" length="0.025"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.0125"/>
   </visual> 
  </link>

  <link name="left_finger_tip">
    <visual>
      <geometry>
        <box size="0.01 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.025 0.0125"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.025 0.0125"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="palm_right_finger" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort ="20" lower="-0.4" upper="0.4" velocity="2.1750"/>
    <origin rpy="0 0 -2" xyz="0 0 -0.025"/>
    <parent link="palm"/>
    <child link="right_finger"/>
  </joint>

  <link name="right_finger">
    <visual>
      <geometry>
        <box size="0.01 0.075 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.0375 0.0125"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.075 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.0375 0.0125"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_finger_tip" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort ="20" lower="-0.4" upper="0.4" velocity="2.1750"/>
    <origin rpy="0 0 ${pi/6}" xyz="0 0.075 0"/>
    <parent link="right_finger"/>
    <child link="right_finger_tip"/>
  </joint>

  <joint name="right_finger_hinge_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="right_finger_tip"/>
    <child link="right_finger_hinge"/>
  </joint>

  <link name="right_finger_hinge">
   <visual>
    <geometry>
     <cylinder  radius="0.006" length="0.025"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.0125"/>
   </visual> 
  </link>

  <link name="right_finger_tip">
    <visual>
      <geometry>
        <box size="0.01 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.025 0.0125"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.05 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.025 0.0125"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>


  </xacro:macro>
</robot>
